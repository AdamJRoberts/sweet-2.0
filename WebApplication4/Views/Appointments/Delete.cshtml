@model WebApplication4.Models.Appointment
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>
<p>
    Are you sure you would like to delete this appointment?
</p>
<ul>
    <li>Title: @Model.Email</li>
    <li>Date: @Model.Date</li>
    <li>Time: @Model.Time</li>
</ul>
@using (Html.BeginForm("DoDelete", "Appointments", FormMethod.Post))
{

    @Html.HiddenFor(m => m.Id)
    <input type="submit" class="btn btn-danger" value="Yes, Delete it!" />
    @Html.ActionLink("No, back to appointments", "Index")
}